<%
  # Determine if this link is active based on the current path
  active = request.path.split("/").second == path.split("/").second
  
  base_classes = "px-3 py-2 rounded-md text-sm font-medium"
  inactive_classes = "text-primary-300 hover:bg-primary-700 hover:text-white"
  active_classes = "bg-primary-900 text-white"
  
  link_classes = [base_classes]
  link_classes << (active ? active_classes : inactive_classes)
%>
<%= link_to label, path, class: link_classes.join(' ') %>
