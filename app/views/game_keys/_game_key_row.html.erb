<tr id="<%= dom_id(game_key) %>">
  <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= game_key.name %></td>
  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= game_key.servers.first.name %></td>
  <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
    <% if key_visible %>
      <span class="whitespace-nowrap px-3 py-4 text-sm"><%= game_key.key %></span>
    <% else %>
      <%= button_to t(".claim"), claim_game_key_path(game_key), method: :patch,
            params: { view: "row" },
            form: { data: { turbo_confirm: t(".confirm-claim") } },
            class: "text-indigo-600 hover:text-indigo-900" %>
    <% end %>
  </td>
</tr>