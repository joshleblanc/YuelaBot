<%= content_for(:subnav) { render 'shared/crayta_sub_nav' } %>

<div class="space-y-4">
  <div class="grid grid-flow-col grid-cols-3 gap-4">
    <div>
      <%= image_tag @game.cover_url %>
    </div>
    <div class="col-span-2">
      <%= render 'shared/data_list',
          header: @game.name,
          subtitle: "",
          data: [
              [t(".total_visits"), @game.visits],
              [t(".rank"), @game.rank],
              [t(".play"), link_to(t(".play_link"), @game.external_url)],
          ] %>
    </div>
  </div>

<h2 class="text-lg font-bold"><%= t(".time_spent") %></h2>
  <%= timeline crayta_game_timeline_url(@game) %>
  <%= area_chart crayta_game_visits_history_url(@game) %>
</div>
